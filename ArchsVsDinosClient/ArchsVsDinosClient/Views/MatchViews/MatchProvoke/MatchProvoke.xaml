<Window x:Class="ArchsVsDinosClient.Views.MatchViews.MatchProvoke.MatchProvoke"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ArchsVsDinosClient.Views.MatchViews.MatchProvoke"
        mc:Ignorable="d"
        Title="MatchProvoke" Height="780" Width="1420" ResizeMode="CanResize"
        xmlns:language="clr-namespace:ArchsVsDinosClient.Properties.Langs" xmlns:controls="clr-namespace:ArchsVsDinosClient.Views.MatchViews"
        WindowStartupLocation="CenterScreen">

    <Window.Background>
        <ImageBrush ImageSource="/Resources/Images/provokeBackground.png"/>
    </Window.Background>

    <Grid Margin="10,10,10,10">

        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <!-- DINOS CARDS -->
        <Grid Grid.Row="0" Margin="10,10,10,10">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width=".2*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width=".2*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width=".2*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    <controls:PlayerCell x:Name="P1Deck"/>
                </Grid>
                <Grid Grid.Column="2">
                    <controls:PlayerCell x:Name="P2Deck"/>
                </Grid>
                <Grid Grid.Column="4">
                    <controls:PlayerCell x:Name="P3Deck"/>
                </Grid>
                <Grid Grid.Column="6">
                    <controls:PlayerCell x:Name="P4Deck"/>
                </Grid>
            </Grid>

            <Grid Grid.Column="1">

                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                
            </Grid>

        </Grid>

        <!-- ARCHS CARDS -->
        <Grid Grid.Row="1">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width=".1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width=".1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width=".1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width=".1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width=".1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width=".1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width=".1*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width=".1*"/>
                <ColumnDefinition Width="1*"/>

            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0" Background="Black" Opacity="0.6">
                
            </Grid>

            <Grid Grid.Column="2" Background="Black" Opacity="0.6">

            </Grid>

            <Grid Grid.Column="4" Background="Black" Opacity="0.6">

            </Grid>

            <Grid Grid.Column="6" Background="Black" Opacity="0.6">

            </Grid>

            <Grid Grid.Column="8" Background="Black" Opacity="0.6">

            </Grid>

            <Grid Grid.Column="10" Background="Black" Opacity="0.6">

            </Grid>

            <Grid Grid.Column="12" Background="Black" Opacity="0.6">

            </Grid>

            <Grid Grid.Column="14" Background="Black" Opacity="0.6">

            </Grid>

            <Grid Grid.Column="16" Background="Black" Opacity="0.6">

            </Grid>

        </Grid>
        
    </Grid>
        
</Window>
