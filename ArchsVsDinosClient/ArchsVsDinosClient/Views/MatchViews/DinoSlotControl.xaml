<UserControl x:Class="ArchsVsDinosClient.Views.MatchViews.DinoSlotControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:utils="clr-namespace:ArchsVsDinosClient.Utils"
             mc:Ignorable="d" 
             d:DesignHeight="500" 
             d:DesignWidth="330">

    <UserControl.Resources>
        <utils:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
        <utils:CardToBackgroundConverter x:Key="CardToBackgroundConverter"/>
    </UserControl.Resources>

    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Row 1 -->
        <Border Grid.Row="0" Grid.Column="0" 
                Background="Transparent"/>

        <Border Grid.Row="0" Grid.Column="1" 
                Margin="2"
                CornerRadius="6"
                BorderBrush="#FFD700"
                BorderThickness="2"
                Background="{Binding Head, Converter={StaticResource CardToBackgroundConverter}}">
            <Image Source="{Binding Head.CardRoute}" 
                   Stretch="Uniform"
                   Visibility="{Binding Head, Converter={StaticResource NullToVisibilityConverter}}"/>
        </Border>

        <Border Grid.Row="0" Grid.Column="2" 
                Background="Transparent"/>

        <!-- Row 2 -->
        <Border Grid.Row="1" Grid.Column="0" 
                Margin="2"
                CornerRadius="6"
                BorderBrush="#FFD700"
                BorderThickness="2"
                Background="{Binding LeftArm, Converter={StaticResource CardToBackgroundConverter}}">
            <Image Source="{Binding LeftArm.CardRoute}" 
                   Stretch="Uniform"
                   Visibility="{Binding LeftArm, Converter={StaticResource NullToVisibilityConverter}}"/>
        </Border>

        <Border Grid.Row="1" Grid.Column="1" 
                Margin="2"
                CornerRadius="6"
                BorderBrush="#FFD700"
                BorderThickness="2"
                Background="{Binding Chest, Converter={StaticResource CardToBackgroundConverter}}">
            <Image Source="{Binding Chest.CardRoute}" 
                   Stretch="Uniform"
                   Visibility="{Binding Chest, Converter={StaticResource NullToVisibilityConverter}}"/>
        </Border>

        <Border Grid.Row="1" Grid.Column="2" 
                Margin="2"
                CornerRadius="6"
                BorderBrush="#FFD700"
                BorderThickness="2"
                Background="{Binding RightArm, Converter={StaticResource CardToBackgroundConverter}}">
            <Image Source="{Binding RightArm.CardRoute}" 
                   Stretch="Uniform"
                   Visibility="{Binding RightArm, Converter={StaticResource NullToVisibilityConverter}}"/>
        </Border>

        <!-- Row 3 -->
        <Border Grid.Row="2" Grid.Column="0" 
                Background="Transparent"/>

        <Border Grid.Row="2" Grid.Column="1" 
                Margin="2"
                CornerRadius="6"
                BorderBrush="#FFD700"
                BorderThickness="2"
                Background="{Binding Legs, Converter={StaticResource CardToBackgroundConverter}}">
            <Image Source="{Binding Legs.CardRoute}" 
                   Stretch="Uniform"
                   Visibility="{Binding Legs, Converter={StaticResource NullToVisibilityConverter}}"/>
        </Border>

        <Border Grid.Row="2" Grid.Column="2" 
                Background="Transparent"/>
    </Grid>
</UserControl>