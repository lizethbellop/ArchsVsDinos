<Page x:Class="ArchsVsDinosClient.Views.Instructions.Page7"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ArchsVsDinosClient.Views.Instructions"
      xmlns:language="clr-namespace:ArchsVsDinosClient.Properties.Langs"
      mc:Ignorable="d" 
      d:DesignHeight="580" d:DesignWidth="1100"
      Title="Page7">

    <Page.Background>
        <ImageBrush ImageSource="/Resources/Images/Instructions/7.png" Stretch="Fill"/>
    </Page.Background>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1.4*"/>
            <RowDefinition Height="11*"/>
            <RowDefinition Height="1.2*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="1">
            <TextBlock Text="{x:Static language:Lang.InstructionsP7_1}"
           FontFamily="Tw Cen MT Condensed Extra Bold"
           TextAlignment="Center" FontSize="35"
           HorizontalAlignment="Center" Margin="0,5,0,0" VerticalAlignment="Top" Foreground="White" Width="252" TextWrapping="Wrap"/>

            <TextBlock Text="{x:Static language:Lang.InstructionsP7_2}"
           FontFamily="Tw Cen MT Condensed Extra Bold"
           TextAlignment="Left" FontSize="26"
           HorizontalAlignment="Left" Margin="74,13,0,0" VerticalAlignment="Top" Foreground="White" Width="345" TextWrapping="Wrap"/>

            <TextBlock Text="{x:Static language:Lang.InstructionsP7_3}"
           FontFamily="Tw Cen MT Condensed Extra Bold"
           TextAlignment="Center" FontSize="30"
           HorizontalAlignment="Left" Margin="179,404,0,0" VerticalAlignment="Top" Foreground="White" Width="174" TextWrapping="Wrap"/>

            <TextBlock Text="{x:Static language:Lang.InstructionsP7_4}"
           FontFamily="Tw Cen MT Condensed Extra Bold"
           TextAlignment="Center" FontSize="30"
           HorizontalAlignment="Center" Margin="0,378,0,0" VerticalAlignment="Top" Foreground="White" Width="116" TextWrapping="Wrap"/>

            <TextBlock Text="{x:Static language:Lang.InstructionsP7_5}"
           FontFamily="Tw Cen MT Condensed Extra Bold"
           TextAlignment="Center" FontSize="30"
           HorizontalAlignment="Left" Margin="754,375,0,0" VerticalAlignment="Top" Foreground="White" Width="177" TextWrapping="Wrap"/>
        </Grid>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="7*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Click="Click_BtnBack" Width="65" Height="45" Margin="0,0,0,5">
                <Button.Background>
                    <ImageBrush ImageSource="/Resources/Images/flechaA.png"/>
                </Button.Background>
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}"  CornerRadius="5" BorderThickness="0">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <Button Grid.Column="2" Click="Click_BtnNext" Width="65" Height="45" Margin="0,0,0,5">
                <Button.Background>
                    <ImageBrush ImageSource="/Resources/Images/flechaS.png"/>
                </Button.Background>
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}"  CornerRadius="5" BorderThickness="0">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>

        </Grid>
    </Grid>
</Page>
