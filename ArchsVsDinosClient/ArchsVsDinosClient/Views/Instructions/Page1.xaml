<Page x:Class="ArchsVsDinosClient.Views.Instructions.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:language="clr-namespace:ArchsVsDinosClient.Properties.Langs"
      Title="Page1" Height="580" Width="1100">

    <Page.Background>
        <ImageBrush ImageSource="/Resources/Images/Instructions/1.png" Stretch="Fill"/>
    </Page.Background>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1.4*"/>
            <RowDefinition Height="11*"/>
            <RowDefinition Height="1.2*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="1">
            <TextBlock Text="{x:Static language:Lang.InstructionsP1_1}"
           FontFamily="Tw Cen MT Condensed Extra Bold"
           TextAlignment="Center" FontSize="30"
           HorizontalAlignment="Left" Margin="144,0,0,0" VerticalAlignment="Center" Foreground="White" Width="485" TextWrapping="Wrap"/>

        </Grid>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="7*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="2" Click="Click_BtnNext" Width="65" Height="45" Margin="0,0,0,5">
                <Button.Background>
                    <ImageBrush ImageSource="/Resources/Images/flechaS.png"/>
                </Button.Background>
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}"  CornerRadius="5" BorderThickness="0">
                            <ContentPresenter/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>

        </Grid>
    </Grid>
</Page>