<UserControl x:Class="ArchsVsDinosClient.Views.LobbyViews.PlayerSlot"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:language="clr-namespace:ArchsVsDinosClient.Properties.Langs"
             Height="250" Width="250">

    <Grid>

        <!-- Null -->
        <Grid Name="Gr_Null" Opacity="0.80" Visibility="Visible">
            <Border CornerRadius="0,0,140,0">
                <Border.Background>
                    <ImageBrush ImageSource="/Resources/Images/noPlayers.png"/>
                </Border.Background>
            </Border>
        </Grid>

        <!-- Not Friend -->
        <Grid Name="Gr_IsNotFriend" Visibility="Collapsed">
            <Border Background="#FF331010" BorderBrush="#FFE8E8E8" BorderThickness="2" CornerRadius="70,70,8,8" Margin="10">
                <Grid VerticalAlignment="Center" Margin="3">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="3*"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Margin="10,20,10,0">
                        <Label Name="Lb_Username" Content="Player" FontFamily="Tw Cen MT Condensed Extra Bold" 
                               FontSize="23" HorizontalAlignment="Center" FontWeight="Bold" Margin="0,2,0,5" Padding="2" Foreground="#FF55FF46"/>
                        <Label Name="Lb_Nickname" Content="Nickname" FontFamily="Tw Cen MT Condensed Extra Bold" 
                               FontSize="18" HorizontalAlignment="Center" FontWeight="Bold" Margin="0,2,0,5" Padding="2" Foreground="White"/>
                        <Border Width="90" Height="90" Background="White" BorderBrush="Gray" BorderThickness="1" 
                                CornerRadius="4" Margin="3" HorizontalAlignment="Center"/>
                    </StackPanel>

                    <Grid Grid.Row="1" Margin="0,5,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Add Friend Button -->
                        <Button Grid.Column="0" Content="{x:Static language:Lang.Lobby_AddFriend}" Height="50" Margin="10,0,10,0" Foreground="Black" FontWeight="Bold" 
                                BorderBrush="Transparent" FontFamily="Tw Cen MT Condensed Extra Bold" FontSize="15">
                            <Button.Background>
                                <ImageBrush ImageSource="/Resources/Images/boneButton.png"/>
                            </Button.Background>
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsLocalPlayer}" Value="True">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <!-- Kick Button -->
                        <Button Grid.Column="1" Content="{x:Static language:Lang.Lobby_ExpellText}" Height="50" Margin="10,0,10,0" Foreground="#FFE84300" FontWeight="Bold" 
                                BorderBrush="Transparent" FontFamily="Tw Cen MT Condensed Extra Bold" FontSize="15">
                            <Button.Background>
                                <ImageBrush ImageSource="/Resources/Images/boneDestroyedButton.png"/>
                            </Button.Background>
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsLocalPlayer}" Value="True">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>
                </Grid>
            </Border>
            <Image Source="/Resources/Images/dentDown.png" Stretch="Uniform" HorizontalAlignment="Center" Margin="0,-165,0,0"/>
        </Grid>

        <!-- Is Friend -->
        <Grid Name="Gr_IsFriend" Visibility="Collapsed">
            <Border Background="#FF331010" BorderBrush="#FFE8E8E8" BorderThickness="2" CornerRadius="70,70,8,8" Margin="10">
                <Grid VerticalAlignment="Center" Margin="3">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="3*"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Margin="10,20,10,0">
                        <Label Name="Lb_FriendUsername" Content="Player" FontFamily="Tw Cen MT Condensed Extra Bold" 
                               FontSize="23" HorizontalAlignment="Center" FontWeight="Bold" Margin="0,2,0,5" Padding="2" Foreground="#FF55FF46"/>
                        <Label Name="Lb_FriendNickname" Content="Nickname" FontFamily="Tw Cen MT Condensed Extra Bold" 
                               FontSize="18" HorizontalAlignment="Center" FontWeight="Bold" Margin="0,2,0,5" Padding="2" Foreground="White"/>
                        <Border Width="90" Height="90" Background="White" BorderBrush="Gray" BorderThickness="1" 
                                CornerRadius="4" Margin="3" HorizontalAlignment="Center"/>
                    </StackPanel>

                    <Grid Grid.Row="1" Margin="0,5,0,0">
                        <!-- Kick Button Friend -->
                        <Button Content="{x:Static language:Lang.Lobby_ExpellText}" Height="50" Width="150" Margin="10,0,10,0" Foreground="#FFE84300" FontWeight="Bold" 
                                BorderBrush="Transparent" FontFamily="Tw Cen MT Condensed Extra Bold" FontSize="15">
                            <Button.Background>
                                <ImageBrush ImageSource="/Resources/Images/boneDestroyedButton.png"/>
                            </Button.Background>
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsLocalPlayer}" Value="True">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>
                </Grid>
            </Border>
            <Image Source="/Resources/Images/dentDown.png" Stretch="Uniform" HorizontalAlignment="Center" Margin="0,-165,0,0"/>
        </Grid>

    </Grid>
</UserControl>