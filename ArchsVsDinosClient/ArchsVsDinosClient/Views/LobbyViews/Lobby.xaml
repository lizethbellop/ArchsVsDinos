<views:BaseSessionWindow x:Class="ArchsVsDinosClient.Views.LobbyViews.Lobby"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ArchsVsDinosClient.Views.LobbyViews"
        xmlns:views="clr-namespace:ArchsVsDinosClient.Views"
        mc:Ignorable="d"
        xmlns:language="clr-namespace:ArchsVsDinosClient.Properties.Langs"
        Title="Lobby" Height="780" Width="1420"
        WindowStartupLocation="CenterScreen"
        Loaded="LobbyLoaded" WindowState="Maximized">

    <views:BaseSessionWindow.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FF5B64F3" Offset="0"/>
            <GradientStop Color="#FF52C57A" Offset="1"/>
            <GradientStop Color="#FFAD6CC4" Offset="0.097"/>
            <GradientStop Color="#FFE8F6B7" Offset="0.243"/>
        </LinearGradientBrush>
    </views:BaseSessionWindow.Background>

    <Grid Margin="15,15,15,15">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width=".8*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width=".8*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">

            <StackPanel VerticalAlignment="Top" HorizontalAlignment="Left">
                <Button Content="{x:Static language:Lang.GlobalReturnText}" Click="Click_BtnCancelMatch" Height="70" Width="140" Margin="0,10,0,20" Foreground="#FFFFAE80" FontWeight="Bold" 
                        BorderBrush="Transparent" FontFamily="Tw Cen MT Condensed Extra Bold" FontSize="23">
                    <Button.Background>
                        <ImageBrush ImageSource="/Resources/Images/hotIron.png"/>
                    </Button.Background>
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" Background="{TemplateBinding Background}" 
                                    CornerRadius="5" BorderThickness="0">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>

            <StackPanel VerticalAlignment="Bottom">
                <Label Content="{x:Static language:Lang.GlobalGroupChatText}" FontFamily="Tw Cen MT Condensed Extra Bold" FontSize="20" Foreground="Black"/>
                <Border Background="#CCFFFFFF" BorderBrush="#FF00730B" BorderThickness="1" Height="400" CornerRadius="5">
                    <ListBox ItemsSource="{Binding Chat.Messages}"
                        BorderThickness="0"
                        Background="Transparent"
                        ScrollViewer.HorizontalScrollBarVisibility="Disabled">

                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}"
                                    TextWrapping="Wrap"
                                    MaxWidth="330"
                                    Padding="5"
                                    FontFamily="Trebuchet MS"
                                    FontSize="12"
                                    Foreground="Black"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Border>
            </StackPanel>

            <StackPanel VerticalAlignment="Bottom">
                <Grid>
                    <TextBox x:Name="TxtMessageInput"
                        Height="40"
                        Margin="0,5,0,0"
                        FontFamily="Trebuchet MS"
                        BorderBrush="#FF029700"
                        BorderThickness="1"
                        Padding="5,5,60,5"
                        MaxLength="140"
                        TextWrapping="Wrap"
                        Text="{Binding Chat.MessageInput, UpdateSourceTrigger=PropertyChanged}">

                        <TextBox.InputBindings>
                            <KeyBinding Key="Enter"
                                        Command="{Binding Chat.SendMessageCommand}" />
                        </TextBox.InputBindings>
                    </TextBox>
                    
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,10,0" IsHitTestVisible="False">
                        <TextBlock Text="{Binding Text.Length, ElementName=TxtMessageInput}"
                            FontSize="13" Foreground="#FF005F25"/>
                        <TextBlock Text="/140" 
                       FontSize="13" Foreground="#FF686868"/>
                    </StackPanel>
                </Grid>
            </StackPanel>

        </Grid>

        <Grid Grid.Column="1" Margin="20,20,20,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Image Grid.Row="0" Source="/Resources/Images/logo.png" Stretch="Uniform" HorizontalAlignment="Center" Height="100"/>

            <Label Grid.Row="1" Content="{x:Static language:Lang.Lobby_GameBeginningText}" FontFamily="{StaticResource Volcanic Dungeon}" FontSize="18" 
                   Foreground="Black" HorizontalAlignment="Center" Margin="0,0,0,5"/>

            <UniformGrid Grid.Row="2" Columns="2" Rows="2" Margin="10">
                <!-- Player 1: jugador local -->
                <local:PlayerSlot x:Name="PlayerSlot1" DataContext="{Binding Slots[0]}" ViewModel="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=DataContext}"/>

                <!-- Player 2 -->
                <local:PlayerSlot x:Name="PlayerSlot2" DataContext="{Binding Slots[1]}" ViewModel="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=DataContext}"/>

                <!-- Player 3 -->
                <local:PlayerSlot x:Name="PlayerSlot3" DataContext="{Binding Slots[2]}" ViewModel="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=DataContext}"/>

                <!-- Player 4 -->
                <local:PlayerSlot x:Name="PlayerSlot4" DataContext="{Binding Slots[3]}" ViewModel="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=DataContext}"/>

            </UniformGrid>
        </Grid>

        <Grid Grid.Column="2" Margin="0,0,0,0">

            <StackPanel VerticalAlignment="Top">
                <Label Content="{x:Static language:Lang.GlobalGameId}" FontFamily="Tw Cen MT Condensed Extra Bold" FontSize="40" FontWeight="Bold" 
                       Foreground="White" HorizontalAlignment="Right" Margin="0,0,0,0"/>
                <Label Name="Lb_MatchCode" Content="{Binding MatchCode}" FontFamily="Trebuchet MS" FontSize="35" FontWeight="Medium" 
                       Foreground="Black" HorizontalAlignment="Right" Margin="0,10,0,20"/>

                <StackPanel Margin="20,0,0,20" VerticalAlignment="Bottom" HorizontalAlignment="Right">
                    <Button Content="{x:Static language:Lang.Lobby_InviteFriends}" Click ="Click_BtnInviteFriends" Name="Btn_InviteFriends" Height="80" Width="170" Margin="0,30,0,20" Foreground="White" FontWeight="Bold" 
                    BorderBrush="Transparent" FontFamily="Tw Cen MT Condensed Extra Bold" FontSize="20" HorizontalAlignment="Right">
                        <Button.Background>
                            <ImageBrush ImageSource="/Resources/Images/rockIron.png"/>
                        </Button.Background>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="5" BorderThickness="0">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    <Button Content="{x:Static language:Lang.Lobby_InviteByEmail}" Click="Click_BtnInvitePlayerByEmail" Name="Btn_InvitePlayerByEmail" Height="80" Width="240" Margin="0,30,0,20" Foreground="White" FontWeight="Bold" 
                    BorderBrush="Transparent" FontFamily="Tw Cen MT Condensed Extra Bold" FontSize="20" HorizontalAlignment="Right">
                        <Button.Background>
                            <ImageBrush ImageSource="/Resources/Images/rockIron.png"/>
                        </Button.Background>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="5" BorderThickness="0">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </StackPanel>

            <StackPanel VerticalAlignment="Bottom" Margin="5">
                <CheckBox x:Name="Btn_Begin" 
          Click="Click_BtnBegin"
          Height="200" Width="300" Foreground="White" FontWeight="Bold" 
          FontFamily="Tw Cen MT Condensed Extra Bold" FontSize="50">
                    <CheckBox.Template>
                        <ControlTemplate TargetType="CheckBox">
                            <Border x:Name="border" Background="Transparent">
                                <Grid>
                                    <Image x:Name="BoneImage" Source="/Resources/Images/Begin.png" Stretch="Uniform"/>
                                    <Rectangle x:Name="RedTint" Fill="Red" Opacity="0" IsHitTestVisible="False">
                                        <Rectangle.OpacityMask>
                                            <ImageBrush ImageSource="/Resources/Images/Begin.png" Stretch="Uniform"/>
                                        </Rectangle.OpacityMask>
                                    </Rectangle>

                                    <ContentPresenter x:Name="contentPresenter" 
                                      Content="{TemplateBinding Content}"
                                      HorizontalAlignment="Center" 
                                      VerticalAlignment="Center"/>
                                </Grid>
                            </Border>

                            <ControlTemplate.Triggers>
                                <Trigger Property="IsChecked" Value="False">
                                    <Setter Property="Content" Value="{x:Static language:Lang.Lobby_Ready}"/>
                                </Trigger>

                                <Trigger Property="IsChecked" Value="True">
                                    <Setter Property="Content" Value="{x:Static language:Lang.Lobby_Cancel}"/>
                                    <Setter TargetName="RedTint" Property="Opacity" Value="0.6"/>
                                    <Setter TargetName="border" Property="Effect">
                                        <Setter.Value>
                                            <DropShadowEffect Color="Red" BlurRadius="20" ShadowDepth="0"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>

                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </CheckBox.Template>
                </CheckBox>
            </StackPanel>

            <Grid Margin="0,0,-30,0" Name="Gr_MyFriends" Visibility="Collapsed">
                <Grid.Background>
                    <ImageBrush ImageSource="/Resources/Images/emergentTable.png"/>
                </Grid.Background>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Título -->
                <StackPanel Grid.Row="0">
                    <Label Content="{x:Static language:Lang.Friends_MyFriends}" 
                        FontFamily="{StaticResource Volcanic Dungeon}" 
                        FontSize="20" 
                        FontWeight="Bold" 
                        Foreground="#FF94FF21" 
                        HorizontalAlignment="Center"  
                        Margin="0,50,0,0"/>
                </StackPanel>

                <!-- Lista de amigos -->
                <ScrollViewer Grid.Row="1" Margin="20,10,20,10" VerticalScrollBarVisibility="Auto">
                    <ItemsControl x:Name="FriendsList">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#33000000" 
                                    Margin="5" 
                                    Padding="10" 
                                    CornerRadius="8"
                                    BorderBrush="#FF94FF21" 
                                    BorderThickness="1">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0" 
                                            Text="{Binding}" 
                                            FontFamily="Tw Cen MT Condensed Extra Bold" 
                                            FontSize="18" 
                                            Foreground="White" 
                                            VerticalAlignment="Center"
                                            Margin="10,0,0,0"/>

                                        <Button Grid.Column="1" 
                                            Content="Invitar" 
                                            Click="Click_BtnInviteFriend"
                                            Tag="{Binding}"
                                            Height="35" 
                                            Width="100" 
                                            FontFamily="Tw Cen MT Condensed Extra Bold" 
                                            FontSize="16" 
                                            Foreground="White" 
                                            Background="#FF94FF21"
                                            BorderBrush="{x:Null}"
                                            Cursor="Hand">
                                            <Button.Template>
                                                <ControlTemplate TargetType="Button">
                                                    <Border x:Name="border" 
                                               Background="{TemplateBinding Background}"
                                               CornerRadius="8">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                                                        </Trigger>
                                                        <Trigger Property="IsPressed" Value="True">
                                                            <Setter TargetName="border" Property="Opacity" Value="0.6"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Button.Template>
                                        </Button>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <!-- Botón Cancelar -->
                <StackPanel Margin="12,-230,0,0" Grid.Row="2">
                    <Button Content="{x:Static language:Lang.GlobalCancelText}" 
                        Click="Click_BtnCancelInviteFriend" 
                        Height="80" 
                        Width="150" 
                        FontFamily="Tw Cen MT Condensed Extra Bold" 
                        FontSize="21" 
                        Foreground="White" 
                        BorderBrush="{x:Null}">
                        <Button.Background>
                            <ImageBrush ImageSource="/Resources/Images/rockCancel.png"/>
                        </Button.Background>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border" 
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="13">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter TargetName="border" Property="Opacity" Value="0.6"/>
                                    </Trigger>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter TargetName="border" Property="Opacity" Value="0.4"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Grid>

            <Grid Margin="0,0,-30,0" Name="Gr_InviteByEmail" Visibility="Collapsed">
                <Grid.Background>
                    <ImageBrush ImageSource="/Resources/Images/emergentTable.png"/>
                </Grid.Background>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height= "*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0">
                    <Label Content="{x:Static language:Lang.Lobby_InviteByEmailGr}" FontFamily="{StaticResource Volcanic Dungeon}" FontSize="12" FontWeight="Bold" 
                        Foreground="#FF94FF21" HorizontalAlignment="Center"  Margin="0,50,0,50"/>
                </StackPanel>

                <StackPanel Grid.Row="1">
                    <Border CornerRadius="15" Background="White" BorderBrush="Gray" BorderThickness="1"  Width="268" Height="29" HorizontalAlignment="Center">
                        <TextBox Name="TxtB_InviteByEmail" TextWrapping="NoWrap" FontFamily="Trebuchet MS" BorderThickness="0" Background="Transparent" Padding="5,2" VerticalAlignment="Center"/>
                    </Border>
                </StackPanel>

                <StackPanel Margin="12,-530,0,0" Grid.Row="2">
                    <Button Content="{x:Static language:Lang.Lobby_Invite}" Click="Click_BtnInviteAPlayerByEmail" Height="80" Width="150" FontFamily="Tw Cen MT Condensed Extra Bold" FontSize="21" Foreground="White" BorderBrush="{x:Null}">
                        <Button.Background>
                            <ImageBrush ImageSource="/Resources/Images/rockConfirm.png"/>
                        </Button.Background>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border" Background="{TemplateBinding Background}"
                                     BorderBrush="{TemplateBinding BorderBrush}"
                                     BorderThickness="{TemplateBinding BorderThickness}"
                                     CornerRadius="13">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter TargetName="border" Property="Opacity" Value="0.6"/>
                                    </Trigger>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter TargetName="border" Property="Opacity" Value="0.4"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    <Button Content="{x:Static language:Lang.GlobalCancelText}" Click="Click_BtnCancelInviteByEmail" Height="80" Width="150" FontFamily="Tw Cen MT Condensed Extra Bold" FontSize="21" Foreground="White" BorderBrush="{x:Null}" Margin="0,20,0,0">
                        <Button.Background>
                            <ImageBrush ImageSource="/Resources/Images/rockCancel.png"/>
                        </Button.Background>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border" Background="{TemplateBinding Background}"
                         BorderBrush="{TemplateBinding BorderBrush}"
                         BorderThickness="{TemplateBinding BorderThickness}"
                         CornerRadius="13">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter TargetName="border" Property="Opacity" Value="0.6"/>
                                    </Trigger>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter TargetName="border" Property="Opacity" Value="0.4"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>

            </Grid>

        </Grid>

    </Grid>

</views:BaseSessionWindow>
