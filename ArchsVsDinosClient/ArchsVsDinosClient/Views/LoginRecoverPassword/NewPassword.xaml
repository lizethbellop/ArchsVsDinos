<Window x:Class="ArchsVsDinosClient.Views.LoginRecoverPassword.NewPassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ArchsVsDinosClient.Views.LoginRecoverPassword"
        xmlns:language="clr-namespace:ArchsVsDinosClient.Properties.Langs"      
        WindowStartupLocation="CenterScreen" 
        mc:Ignorable="d"
        Title="NewPassword" Height="400" Width="450" WindowStyle="None">

    <Window.Background>

        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FF303168"/>
            <GradientStop Color="#FFFF8A00" Offset="1"/>
            <GradientStop Color="#FF8346A4" Offset="0.844"/>
        </LinearGradientBrush>
    </Window.Background>

    <Grid Margin="15,15,15,15">
        <Grid.RowDefinitions>
            <!--Title  -->
            <RowDefinition Height="Auto"/>
            <!-- Indication -->
            <RowDefinition Height="Auto"/>
            <!-- New Password -->
            <RowDefinition Height="Auto"/>
            <!-- Indication -->
            <RowDefinition Height="Auto"/>
            <!-- Confirm New Password -->
            <RowDefinition Height="Auto"/>
            <!-- Differente password -->
            <RowDefinition Height="Auto"/>
            <!-- Buttons -->
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,20">
            <Label Content="{x:Static language:Lang.EditPassword_NewPassword}" FontFamily="{StaticResource Volcanic Dungeon}" FontSize="14" FontWeight="Bold" Foreground="White"/>
        </StackPanel>

        <StackPanel Grid.Row="1">
            <Label Content="{x:Static language:Lang.ChangeP_NewPassword1}" FontFamily="Tw Cen MT Condensed Extra Bold" FontSize="15" HorizontalAlignment="Center" Foreground="White"/>
        </StackPanel>
            
        <StackPanel Grid.Row="2" HorizontalAlignment="Center" Margin="0,0,0,25">
            <Border CornerRadius="15" Background="White" BorderBrush="Gray" BorderThickness="1"  Width="268" Height="29" VerticalAlignment="Top">
                <PasswordBox Name = "PB_NewNickname" MaxLength="20"  BorderThickness="0" Background="Transparent" Padding="5,2" VerticalAlignment="Center"/>
            </Border>
        </StackPanel>

        <StackPanel Grid.Row="3">
            <Label Content="{x:Static language:Lang.ChangeP_NewPassword}" FontFamily="Tw Cen MT Condensed Extra Bold" FontSize="15" HorizontalAlignment="Center" Foreground="White"/>
        </StackPanel>

        <StackPanel Grid.Row="4" HorizontalAlignment="Center" Margin="0,0,0,0">
            <Border CornerRadius="15" Background="White" BorderBrush="Gray" BorderThickness="1"  Width="268" Height="29" VerticalAlignment="Top">
                <PasswordBox Name="PB_ConfirmNewNickname" MaxLength="20"  BorderThickness="0" Background="Transparent" Padding="5,2" VerticalAlignment="Center"/>
            </Border>
        </StackPanel>

        <StackPanel Grid.Row="5">
            <Label x:Name="Lb_WrongPassword" Visibility="Visible" Content="{x:Static language:Lang.ChangeP_NewPasswordNotSame}" FontFamily="Tw Cen MT Condensed Extra Bold" FontSize="12" HorizontalAlignment="Center" Foreground="#FFFF6565"/>
        </StackPanel>

        <UniformGrid Grid.Row="6" Margin="0,30,0,0">

            <Button Click="Click_BtnSave" Content="{x:Static language:Lang.GlobalSaveText}"  HorizontalAlignment="Right" VerticalAlignment="Center" Height="65" Width="135" FontFamily="Tw Cen MT Condensed Extra Bold" FontSize="16" Foreground="White" BorderBrush="{x:Null}" Margin="0,0,33,0">
                <Button.Background>
                    <ImageBrush ImageSource="/Resources/Images/rockConfirm.png"/>
                </Button.Background>
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}"
                             BorderBrush="{TemplateBinding BorderBrush}"
                             BorderThickness="{TemplateBinding BorderThickness}"
                             CornerRadius="13">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.6"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <Button Click="Click_BtnCancel" Content="{x:Static language:Lang.GlobalCancelText}"  HorizontalAlignment="Right" VerticalAlignment="Center" Height="65" Width="135" FontFamily="Tw Cen MT Condensed Extra Bold" FontSize="16" Foreground="White" BorderBrush="{x:Null}" Margin="0,0,33,0">
                <Button.Background>
                    <ImageBrush ImageSource="/Resources/Images/rockCancel.png"/>
                </Button.Background>
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}"
             BorderBrush="{TemplateBinding BorderBrush}"
             BorderThickness="{TemplateBinding BorderThickness}"
             CornerRadius="13">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.6"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>

        </UniformGrid>

    </Grid>

</Window>
