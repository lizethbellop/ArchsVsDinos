<Window x:Class="ArchsVsDinosClient.Views.EditAccountViews.UpdateInstagram"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ArchsVsDinosClient.Views.EditAccountViews"
        xmlns:language="clr-namespace:ArchsVsDinosClient.Properties.Langs"
        mc:Ignorable="d"
        Title="UpdateInstagram" Height="340" Width="450"
        WindowStartupLocation="CenterScreen">

    <Window.Background>

        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FF303168"/>
            <GradientStop Color="#FF93FF9D" Offset="1"/>
            <GradientStop Color="#FF8D6AA0" Offset="0.226"/>
            <GradientStop Color="#FEDCB77B" Offset="0.451"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid Margin="15,15,15,15">
        <Grid.RowDefinitions>
            <!--Title  -->
            <RowDefinition Height="Auto"/>
            <!-- Instagram Link -->
            <RowDefinition Height="Auto"/>
            <!-- Buttons -->
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,20">
            <Label Content="{x:Static language:Lang.UpdateInstagram_Title}" FontFamily="{StaticResource Volcanic Dungeon}" FontSize="17" FontWeight="Bold" Foreground="#FFFF7E7E"/>
        </StackPanel>

        <StackPanel Grid.Row="1" HorizontalAlignment="Center" Margin="0,0,0,25">
            <Label Content="{x:Static language:Lang.UpdateInstagram_InstagramLink}" FontFamily="Tw Cen MT Condensed Extra Bold" FontSize="22" HorizontalAlignment="Left" Foreground="White"/>
            <Border CornerRadius="15" Background="White" BorderBrush="Gray" BorderThickness="1"  Width="268" Height="29" HorizontalAlignment="Left" VerticalAlignment="Top">
                <TextBox Name = "TxtB_InstagramLink" TextWrapping="NoWrap" FontFamily="Trebuchet MS" BorderThickness="0" Background="Transparent" Padding="5,2" VerticalAlignment="Center"/>
            </Border>
        </StackPanel>

        <UniformGrid Grid.Row="2" Margin="0,30,0,0">

            <Button Content="{x:Static language:Lang.GlobalSaveText}" Click="Btn_Save" HorizontalAlignment="Right" VerticalAlignment="Center" Height="65" Width="135" FontFamily="Tw Cen MT Condensed Extra Bold" FontSize="16" Foreground="White" BorderBrush="{x:Null}" Margin="0,0,33,0">
                <Button.Background>
                    <ImageBrush ImageSource="/Resources/Images/rockConfirm.png"/>
                </Button.Background>
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}"
                 BorderBrush="{TemplateBinding BorderBrush}"
                 BorderThickness="{TemplateBinding BorderThickness}"
                 CornerRadius="13">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.6"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <Button Content="{x:Static language:Lang.GlobalCancelText}" Click="Btn_Cancel" HorizontalAlignment="Right" VerticalAlignment="Center" Height="65" Width="135" FontFamily="Tw Cen MT Condensed Extra Bold" FontSize="16" Foreground="White" BorderBrush="{x:Null}" Margin="0,0,33,0">
                <Button.Background>
                    <ImageBrush ImageSource="/Resources/Images/rockCancel.png"/>
                </Button.Background>
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}"
                 BorderBrush="{TemplateBinding BorderBrush}"
                 BorderThickness="{TemplateBinding BorderThickness}"
                 CornerRadius="13">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.6"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>

        </UniformGrid>

    </Grid>
</Window>
