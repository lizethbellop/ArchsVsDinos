<Window x:Class="ArchsVsDinosClient.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ArchsVsDinosClient"
        mc:Ignorable="d"
        xmlns:language="clr-namespace:ArchsVsDinosClient.Properties.Langs"
        Title="Login" Height="450" Width="800">
    <Grid Background="#F5F5F5">
        <Label Content="{x:Static language:Lang.LoginUserText}" HorizontalAlignment="Left" Margin="257,117,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.208,0.29"/>
        <TextBox HorizontalAlignment="Left" Height="29" Margin="257,145,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="268"/>
        <Label Content="{x:Static language:Lang.LoginPasswordText}" HorizontalAlignment="Left" Height="27" Margin="255,199,0,0" VerticalAlignment="Top" Width="84"/>
        <TextBox HorizontalAlignment="Left" Height="30" TextWrapping="Wrap" VerticalAlignment="Top" Width="268" Margin="256,228,0,0"/>
        <Button Content="{x:Static language:Lang.LoginEnterText}" HorizontalAlignment="Left" Height="31" Margin="279,336,0,0" VerticalAlignment="Top" Width="202" Background="#6B8E23" Foreground="White" FontWeight="Bold" BorderBrush="Transparent"/>
        <Button Content="{x:Static language:Lang.LoginPlayAsGuest}" HorizontalAlignment="Left" Height="32" Margin="279,383,0,0" VerticalAlignment="Top" Width="201" Background="#4682B4" Foreground="White" FontWeight="Bold" BorderBrush="Transparent"/>
        <Button Content="{x:Static language:Lang.LoginRegisterHereText}" HorizontalAlignment="Left" Height="30" Margin="257,280,0,0" VerticalAlignment="Top" Width="223" Background="#DAA520" Foreground="White" BorderBrush="Transparent"/>

    </Grid>
</Window>
