<Window x:Class="ArchsVsDinosClient.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ArchsVsDinosClient"
        mc:Ignorable="d"
        xmlns:language="clr-namespace:ArchsVsDinosClient.Properties.Langs"
        Title="Login" Height="530" Width="500"
        WindowStartupLocation="CenterScreen">

    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FF159ED6"/>
            <GradientStop Color="#FFE8FFBB" Offset="0.988"/>
        </LinearGradientBrush>
    </Window.Background>

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <!-- Logo -->
            <RowDefinition Height="Auto"/>
            <!-- User -->
            <RowDefinition Height="Auto"/>
            <!-- Password -->
            <RowDefinition Height="Auto"/>
            <!-- Register -->
            <RowDefinition Height="Auto"/>
            <!-- Bottons -->
            <RowDefinition Height="Auto"/>
            <!-- Final space -->
        </Grid.RowDefinitions>

        <Image Grid.Row="0" Source="/Resources/Images/logo.png" Stretch="Uniform" HorizontalAlignment="Center" Height="80"/>
        <StackPanel Grid.Row="1" Margin="0,10" HorizontalAlignment="Center">
            <Label Content="{x:Static language:Lang.Login_LanguageText}" FontFamily="Tw Cen MT Condensed Extra Bold" FontSize="18" HorizontalAlignment="Left"/>
            <Grid Width="268">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="10*"/>
                    <ColumnDefinition Width="37*"/>
                    <ColumnDefinition Width="80"/>
                </Grid.ColumnDefinitions>

                <ComboBox x:Name="CB_Language" Grid.Column="0" Height="30" FontFamily="Trebuchet MS" FontSize="14"
                    Background="White" BorderBrush="Gray" BorderThickness="1" Margin="0,0,5,0" Grid.ColumnSpan="2"
                    SelectionChanged="SelectionChanged_CbLanguage">
                    <ComboBoxItem Content="{x:Static language:Lang.Language_Spanish}"/>
                    <ComboBoxItem Content="{x:Static language:Lang.Language_English}"/>
                </ComboBox>


                <Button x:Name="Btn_ChangeLanguage" Grid.Column="2" Content="{x:Static language:Lang.Login_ChangeLanguage}" Height="30" 
                        Background="#FF6ABA2A" Foreground="White" FontWeight="Bold" 
                        BorderBrush="Transparent" FontFamily="Tw Cen MT Condensed Extra Bold" FontSize="14"
                        Click="Click_BtnChangeLanguage">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" Background="{TemplateBinding Background}" 
                    CornerRadius="15" BorderThickness="0">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </StackPanel>

        <StackPanel Grid.Row="2" Margin="0,15" HorizontalAlignment="Center">
            <Label Content="{x:Static language:Lang.Login_UserText}" FontFamily="Tw Cen MT Condensed Extra Bold" FontSize="18" HorizontalAlignment="Left"/>
            <Border CornerRadius="15" Background="White" BorderBrush="Gray" BorderThickness="1"  Width="268" Height="29" HorizontalAlignment="Left" VerticalAlignment="Top">
                <TextBox Name = "TxtB_Username" TextWrapping="NoWrap"  MaxLength="25" FontFamily="Trebuchet MS" BorderThickness="0" Background="Transparent" Padding="5,2" VerticalAlignment="Center"/>
            </Border>
        </StackPanel>
        <StackPanel Grid.Row="3" Margin="0,15" HorizontalAlignment="Center">
            <StackPanel>
                <Label Content="{x:Static language:Lang.Login_PasswordText}" FontFamily="Tw Cen MT Condensed Extra Bold" FontSize="18" HorizontalAlignment="Left"/>
                <Border CornerRadius="15" Background="White" BorderBrush="Gray" BorderThickness="1" Width="268" Height="29" HorizontalAlignment="Left" VerticalAlignment="Top">
                    <PasswordBox Name ="PB_Password" MaxLength="20" BorderThickness="0" Background="Transparent" Padding="5,2" VerticalAlignment="Center"/>
                </Border>
            </StackPanel>
            <UniformGrid>
                <Button Click="Click_BtnForgotPassword"  Content="{x:Static language:Lang.Login_IForgotMyPassword}" Background="{x:Null}" Foreground="#FF6A3D00" BorderBrush="Transparent" FontFamily="Tw Cen MT Condensed Extra Bold" FontSize="14" RenderTransformOrigin="0.531,0.268"/>
            </UniformGrid>
        </StackPanel>
        <UniformGrid Grid.Row="4" Margin="0,10,0,-20" HorizontalAlignment="Center">
            <Label Content="{x:Static language:Lang.Login_DontYouHaveAccount}" FontFamily="Trebuchet MS" FontWeight="Bold"/>
            <Button Content="{x:Static language:Lang.Login_RegisterHereText}" Click="Click_BtnRegister" Background="{x:Null}" Foreground="#FF0A46B5" BorderBrush="Transparent" FontFamily="Tw Cen MT Condensed Extra Bold" FontSize="14" RenderTransformOrigin="0.531,0.268"/>
        </UniformGrid>
        <StackPanel Grid.Row="5" Margin="0,5" HorizontalAlignment="Center" >
            <Button Name ="BtnEnter" Content="{x:Static language:Lang.Login_EnterText}" Click="Click_BtnLogin" Margin="0,0,0,10" HorizontalAlignment="Center" Height="31" VerticalAlignment="Top" Width="202" Background="#FF6ABA2A" Foreground="White" FontWeight="Bold" BorderBrush="Transparent" FontFamily="Tw Cen MT Condensed Extra Bold"  FontSize="18"/>
            <Button Name ="BtnPlayAsGuest" Content="{x:Static language:Lang.Login_PlayAsGuest}" Click="Click_BtnPlayAsGuest" HorizontalAlignment="Center" Height="32"  VerticalAlignment="Top" Width="200" Background="#FF4877C2" Foreground="White" FontWeight="Bold" BorderBrush="Transparent" FontFamily="Tw Cen MT Condensed Extra Bold" FontSize="18"/>
        </StackPanel>

        <Grid x:Name="LoadingOverlay"
              Background="#80000000"
              Visibility="Collapsed"
              HorizontalAlignment="Stretch"
              VerticalAlignment="Stretch"
              Panel.ZIndex="10">

            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="{x:Static language:Lang.GlobalLoadingText}"
                           Foreground="White"
                           FontSize="22"
                           HorizontalAlignment="Center"/>
                <ProgressBar IsIndeterminate="True"
                             Width="200"
                             Height="15"
                             Margin="0,10,0,0"/>
            </StackPanel>

        </Grid>

    </Grid>
</Window>
