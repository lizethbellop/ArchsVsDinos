<Window x:Class="ArchsVsDinosClient.Views.Register"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ArchsVsDinosClient.Views"
        mc:Ignorable="d"
        xmlns:language="clr-namespace:ArchsVsDinosClient.Properties.Langs"
        Title="Register" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">

    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FF92B47B" Offset="1"/>
            <GradientStop Color="#FFADF0FF" Offset="0"/>
            <GradientStop Color="#FF5EC347" Offset="1"/>
            <GradientStop Color="#FF80B519" Offset="1"/>
            <GradientStop Color="#FFC1F186" Offset="0.917"/>
        </LinearGradientBrush>
    </Window.Background>

    <Grid Margin="15,15,15,0" >

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" VerticalAlignment="Top" Margin="10,0,0,0" Grid.ColumnSpan="2">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0" Margin="0,15,0,-5" HorizontalAlignment="Center">
                <Label Content="{x:Static language:Lang.Register_RegisterTitle}"  FontFamily="{StaticResource Volcanic Dungeon}" FontSize="20" FontWeight="Bold" Foreground="#FF684607"/>
            </StackPanel>

            <StackPanel Grid.Row="1" HorizontalAlignment="Center">
                <Label Content="{x:Static language:Lang.Register_Name}" FontFamily="Tw Cen MT Condensed Extra Bold" FontSize="15" Foreground="Black"/>
                <Border CornerRadius="15" Background="White" BorderBrush="Gray" BorderThickness="1"  Width="268" Height="24">
                    <TextBox Name="TxtB_Name" TextWrapping="NoWrap" FontFamily="Trebuchet MS" BorderThickness="0" Background="Transparent" Padding="5,2" VerticalAlignment="Center"/>
                </Border>
            </StackPanel>

            <StackPanel Grid.Row="2" HorizontalAlignment="Center">
                <Label Content="{x:Static language:Lang.Register_Username}" FontFamily="Tw Cen MT Condensed Extra Bold" FontSize="15" Foreground="Black"/>
                <Border CornerRadius="15" Background="White" BorderBrush="Gray" BorderThickness="1" Width="268" Height="24">
                    <TextBox Name="TxtB_Username" TextWrapping="NoWrap" FontFamily="Trebuchet MS" BorderThickness="0" Background="Transparent" Padding="5,2" VerticalAlignment="Center"/>
                </Border>
            </StackPanel>

            <StackPanel Grid.Row="3" HorizontalAlignment="Center">
                <Label Content="{x:Static language:Lang.Register_Email}" FontFamily="Tw Cen MT Condensed Extra Bold" FontSize="15" Foreground="Black"/>
                <Border CornerRadius="15" Background="White" BorderBrush="Gray" BorderThickness="1" Width="268" Height="24">
                    <TextBox Name="TxtB_Email" TextWrapping="NoWrap" FontFamily="Trebuchet MS" BorderThickness="0" Background="Transparent" Padding="5,2" VerticalAlignment="Center"/>
                </Border>
            </StackPanel>

            <StackPanel Grid.Row="4" Margin="0,0" HorizontalAlignment="Center">
                <Label Content="{x:Static language:Lang.Register_Password}" FontFamily="Tw Cen MT Condensed Extra Bold" FontSize="15" Foreground="Black"/>
                <Border CornerRadius="15" Background="White" BorderBrush="Gray" BorderThickness="1"  Width="268" Height="24">
                    <TextBox Name="TxtB_Password" TextWrapping="NoWrap" FontFamily="Trebuchet MS" BorderThickness="0" Background="Transparent" Padding="5,2" VerticalAlignment="Center"/>
                </Border>
            </StackPanel>

            <StackPanel Grid.Row="5" Margin="0,0,0,15" HorizontalAlignment="Center">
                <Label Content="{x:Static language:Lang.Register_Nickname}" FontFamily="Tw Cen MT Condensed Extra Bold" FontSize="15" Foreground="Black"/>
                <Border CornerRadius="15" Background="White" BorderBrush="Gray" BorderThickness="1"  Width="268" Height="24">
                    <TextBox Name="TxtB_Nickname" TextWrapping="NoWrap" FontFamily="Trebuchet MS" BorderThickness="0" Background="Transparent" Padding="5,2" VerticalAlignment="Center"/>
                </Border>
            </StackPanel>

            <UniformGrid Grid.Row="6" Rows="1" Margin="0,0,0,0" HorizontalAlignment="Stretch">

                <Button Name="BtnRegister" Content="{x:Static language:Lang.Register_BtnRegister}" Click="Click_BtnRegisterNow" HorizontalAlignment="Center"  VerticalAlignment="Center" Height="60" Width="150" FontFamily="Tw Cen MT Condensed Extra Bold" FontSize="16" Padding="0" BorderBrush="{x:Null}" Foreground="White">
                    <Button.Background>
                        <ImageBrush ImageSource="/Resources/Images/rockConfirm.png"/>
                    </Button.Background>
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="13">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="border" Property="Opacity" Value="0.6"/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter TargetName="border" Property="Opacity" Value="0.4"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button Name="BtnCancel" Content="{x:Static language:Lang.GlobalCancelText}" Click="Click_BtnCancel" HorizontalAlignment="Right" VerticalAlignment="Center" Height="60" Width="120" FontFamily="Tw Cen MT Condensed Extra Bold" FontSize="16" Foreground="White" BorderBrush="{x:Null}" Margin="0,0,33,0">
                    <Button.Background>
                        <ImageBrush ImageSource="/Resources/Images/rockCancel.png"/>
                    </Button.Background>
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="13">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="border" Property="Opacity" Value="0.6"/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter TargetName="border" Property="Opacity" Value="0.4"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

            </UniformGrid>

        </Grid>

        <StackPanel Grid.Column="2" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,0,10,0">

            <Image Source="/Resources/Images/logo.png" Stretch="Uniform" HorizontalAlignment="Right" Height="90" RenderTransformOrigin="0.5,0.5">
                <Image.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="3.381"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Image.RenderTransform>


            </Image>

            <Grid Margin="50,0,0,0">
                <Image Source="/Resources/Images/cartelRegistro.png" Stretch="Uniform"/>

                <!-- Labels image -->
                <Canvas Margin="-4,-5,0,0">
                    <Label Content="{x:Static language:Lang.Register_PasswordFormat}" Foreground="#FFF8DC" FontFamily="Trebuchet MS" FontSize="14" FontWeight="Bold" Canvas.Left="70" Canvas.Top="45">
                        <Label.RenderTransform>
                            <RotateTransform Angle="3"/>
                        </Label.RenderTransform>
                    </Label>
                    <Label Content="{x:Static language:Lang.Register_PasswordFormat2}" Foreground="#FFF8DC" FontFamily="Trebuchet MS" FontSize="13" Canvas.Left="30" Canvas.Top="70">
                        <Label.RenderTransform>
                            <RotateTransform Angle="3"/>
                        </Label.RenderTransform>
                    </Label>
                    <Label Content="{x:Static language:Lang.Register_PasswordFormat3}" Foreground="#FFF8DC" FontFamily="Trebuchet MS" FontSize="13" Canvas.Left="30" Canvas.Top="90">
                        <Label.RenderTransform>
                            <RotateTransform Angle="3"/>
                        </Label.RenderTransform>
                    </Label>
                    <Label Content="{x:Static language:Lang.Register_PasswordFormat4}" Foreground="#FFF8DC" FontFamily="Trebuchet MS" FontSize="13" Canvas.Left="30" Canvas.Top="110">
                        <Label.RenderTransform>
                            <RotateTransform Angle="3"/>
                        </Label.RenderTransform>
                    </Label>
                    <Label Content="{x:Static language:Lang.Register_PasswordFormat5}" Foreground="#FFF8DC" FontFamily="Trebuchet MS" FontSize="13" Canvas.Left="30" Canvas.Top="130">
                        <Label.RenderTransform>
                            <RotateTransform Angle="3"/>
                        </Label.RenderTransform>
                    </Label>
                    <Label Content="{x:Static language:Lang.Register_PasswordFormat6}" Foreground="#FFF8DC" FontFamily="Trebuchet MS" FontSize="13" Canvas.Left="30" Canvas.Top="150">
                        <Label.RenderTransform>
                            <RotateTransform Angle="3"/>
                        </Label.RenderTransform>
                    </Label>
                </Canvas>
            </Grid>

        </StackPanel>

      <Grid x:Name="LoadingOverlay"
            Background="#80000000"
            Visibility="Collapsed"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Panel.ZIndex="10">

            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="{x:Static language:Lang.GlobalLoadingText}"
                   Foreground="White"
                   FontSize="22"
                   HorizontalAlignment="Center"/>
                <ProgressBar IsIndeterminate="True"
                     Width="200"
                     Height="15"
                     Margin="0,10,0,0"/>
            </StackPanel>

        </Grid>

    </Grid>
</Window>

