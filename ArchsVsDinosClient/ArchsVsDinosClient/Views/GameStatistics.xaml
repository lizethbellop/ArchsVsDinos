<Window x:Class="ArchsVsDinosClient.Views.GameStatistics"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ArchsVsDinosClient.Views"
        xmlns:language="clr-namespace:ArchsVsDinosClient.Properties.Langs"
        mc:Ignorable="d"
        Title="GameStatistics" 
        Height="680" Width="900"
        WindowStartupLocation="CenterScreen" 
        WindowStyle="None">

    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FFF0F0F0" Offset="0"/>
            <GradientStop Color="#FFFCEC5A" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- TÍTULO -->
        <Label Grid.Row="0" 
               Content="{x:Static language:Lang.Statistics_Title}" 
               FontFamily="{StaticResource Ouroboros}" 
               FontSize="32" FontWeight="Bold" 
               Foreground="#FF671414" 
               Margin="0,10,0,15"/>

        <!-- FECHA -->
        <Label Grid.Row="1" 
               Content="{Binding MatchDateText}" 
               FontFamily="Tw Cen MT Condensed Extra Bold" 
               FontSize="18" HorizontalAlignment="Center"
               Margin="0,0,0,20"/>

        <!-- LOADING -->
        <Grid Grid.Row="2"
              Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Label Content="Cargando estadísticas..." 
                   FontSize="20" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center"/>
        </Grid>

        <!-- ERROR -->
        <Grid Grid.Row="2"
              Visibility="{Binding HasError, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <Label Content="{Binding ErrorMessage}" 
                       FontSize="16" Foreground="Red"
                       HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>

        <!-- LISTA DINÁMICA DE JUGADORES -->
        <ItemsControl Grid.Row="2" 
                      ItemsSource="{Binding PlayerStats}"
                      Visibility="{Binding IsLoading, Converter={StaticResource InverseBooleanToVisibilityConverter}}">

            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="4" Rows="1"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <StackPanel Margin="10">

                        <!-- POSICIÓN -->
                        <Label Content="{Binding Position, StringFormat='{}{0}°'}"
                               FontFamily="Tw Cen MT Condensed Extra Bold"
                               FontSize="{Binding Position, Converter={StaticResource PositionToFontSizeConverter}}"
                               HorizontalAlignment="Center"
                               FontWeight="Bold"
                               Foreground="{Binding Position, Converter={StaticResource PositionToColorConverter}}"/>

                        <!-- NOMBRE DEL JUGADOR -->
                        <Label Content="{Binding Username}" 
                               FontFamily="Tw Cen MT Condensed Extra Bold" 
                               FontSize="16" 
                               HorizontalAlignment="Center" 
                               Margin="0,5,0,10"/>

                        <!-- ÍCONO DEL JUGADOR (NO IMAGEN) -->
                        <Border Width="140"
                                Height="{Binding Position, Converter={StaticResource PositionToHeightConverter}}"
                                Background="White"
                                BorderBrush="{Binding Position, Converter={StaticResource PositionToBorderConverter}}"
                                BorderThickness="{Binding Position, Converter={StaticResource PositionToBorderThicknessConverter}}"
                                CornerRadius="5" 
                                Margin="0,0,0,10">

                            <Label Content="{Binding Icon}" 
                                   FontSize="60"
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Center"/>
                        </Border>

                        <!-- ESTADÍSTICAS -->
                        <Border Background="White"
                                BorderBrush="{Binding Position, Converter={StaticResource PositionToBorderConverter}}"
                                BorderThickness="{Binding Position, Converter={StaticResource PositionToStatsBorderThicknessConverter}}"
                                Padding="10" 
                                CornerRadius="5">

                            <StackPanel>
                                <Label Content="{x:Static language:Lang.Statistics_EliminatedArchs}"
                                       FontFamily="Trebuchet MS" 
                                       FontSize="12" 
                                       HorizontalAlignment="Center"/>

                                <Label Content="{Binding EnemiesEliminated}" 
                                       FontFamily="Tw Cen MT Condensed Extra Bold" 
                                       FontSize="16" 
                                       HorizontalAlignment="Center" 
                                       FontWeight="Bold"/>

                                <Label Content="{x:Static language:Lang.Statistics_SupremeBoss}"
                                       FontFamily="Trebuchet MS" 
                                       FontSize="12" 
                                       HorizontalAlignment="Center"
                                       Margin="0,5,0,0"/>

                                <Label Content="{Binding BossesDefeated}" 
                                       FontFamily="Tw Cen MT Condensed Extra Bold" 
                                       FontSize="16" 
                                       HorizontalAlignment="Center" 
                                       FontWeight="Bold"/>
                            </StackPanel>

                        </Border>

                    </StackPanel>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <!-- BOTÓN SALIR -->
        <Button Grid.Row="3" 
                Content="{x:Static language:Lang.GlobalExitText}"
                Command="{Binding ExitCommand}"
                Height="60" Width="200" 
                Foreground="White" 
                FontWeight="Bold"
                FontFamily="Tw Cen MT Condensed Extra Bold" 
                FontSize="20"
                HorizontalAlignment="Right" 
                Margin="0,5,0,0" 
                BorderBrush="{x:Null}">

            <Button.Background>
                <ImageBrush ImageSource="/Resources/Images/rockIron.png"/>
            </Button.Background>

            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border" 
                            Background="{TemplateBinding Background}" 
                            CornerRadius="5" BorderThickness="0">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="border" Property="Opacity" Value="0.6"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>

        </Button>

    </Grid>
</Window>

