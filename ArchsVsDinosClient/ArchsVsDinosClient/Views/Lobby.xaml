                                    CornerRadius="4" Margin="3" HorizontalAlignment="Center">
                                <Label Content="" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </StackPanel>
                    </Border>
                    <Image Source="/Resources/Images/dentDown.png" Stretch="Uniform" HorizontalAlignment="Center" Margin="0,-165,0,0"/>
                </Grid>

                <Grid Margin="0,10,0,0">
                    <!-- Variants of grid (is friend, is not friend, null) -->
                    <!-- Not Friend -->
