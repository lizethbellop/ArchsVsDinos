                            <Label x:Name="Lb_P1Username" FontFamily="Tw Cen MT Condensed Extra Bold" FontSize="23" 
                                   HorizontalAlignment="Center" FontWeight="Bold" Margin="0,2,0,5" Padding="2" Foreground="#FF55FF46"/>
