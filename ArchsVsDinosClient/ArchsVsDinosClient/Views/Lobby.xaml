                        <Border Background="#FF331010" BorderBrush="#FFE8E8E8" BorderThickness="2" Margin="10" CornerRadius="70,70,8,8">
                            <Grid VerticalAlignment="Center" Margin="3">

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="3*"/>
                                    <RowDefinition Height="1*"/>
                                </Grid.RowDefinitions>

                                <StackPanel Grid.Row="0" Margin="10,20,10,0">

