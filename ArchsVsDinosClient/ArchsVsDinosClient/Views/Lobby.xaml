<Window x:Class="ArchsVsDinosClient.Views.Lobby"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ArchsVsDinosClient.Views"
        mc:Ignorable="d"
        xmlns:language="clr-namespace:ArchsVsDinosClient.Properties.Langs"
        Title="Lobby" Height="780" Width="1420"
        WindowStartupLocation="CenterScreen">

    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FF5B64F3" Offset="0"/>
            <GradientStop Color="#FF52C57A" Offset="1"/>
            <GradientStop Color="#FFAD6CC4" Offset="0.097"/>
            <GradientStop Color="#FFE8F6B7" Offset="0.243"/>
        </LinearGradientBrush>
    </Window.Background>

    <Grid Margin="15,15,15,15">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="309*"/>
            <ColumnDefinition Width="296*"/>
            <ColumnDefinition Width="476*"/>
            <ColumnDefinition Width="309*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" Grid.ColumnSpan="2" Margin="0,0,296,0">

            <StackPanel VerticalAlignment="Top" HorizontalAlignment="Left">
                <Button Content="{x:Static language:Lang.GlobalReturnText}" Height="60" Width="100" Margin="0,10,0,20" Foreground="White" FontWeight="Bold" 
                        BorderBrush="Transparent" FontFamily="Tw Cen MT Condensed Extra Bold" FontSize="23">
                    <Button.Background>
                        <ImageBrush ImageSource="/Resources/Images/rockIron.png"/>
                    </Button.Background>
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" Background="{TemplateBinding Background}" 
                                    CornerRadius="5" BorderThickness="0">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>

            <StackPanel VerticalAlignment="Bottom">
                <Label Content="{x:Static language:Lang.GlobalGroupChatText}" FontFamily="Tw Cen MT Condensed Extra Bold" FontSize="20" Foreground="Black"/>
                <Border Background="White" BorderBrush="Gray" BorderThickness="1" Height="350" CornerRadius="5">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <TextBlock x:Name="TxtChat" TextWrapping="Wrap" Padding="5" FontFamily="Trebuchet MS" FontSize="12" Background="#80FFFFFF"/>
                    </ScrollViewer>
                </Border>
            </StackPanel>

            <StackPanel VerticalAlignment="Bottom">
                <TextBox x:Name="TbMessage" Height="30" Margin="0,5,0,0" FontFamily="Trebuchet MS"
                             BorderBrush="Gray" BorderThickness="1" Padding="5"/>
            </StackPanel>

        </Grid>

        <Grid Grid.Column="1" Margin="20,20,20,20" Grid.ColumnSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Image Grid.Row="0" Source="/Resources/Images/logo.png" Stretch="Uniform" HorizontalAlignment="Center" Height="120"/>

            <Label Grid.Row="1" Content="{x:Static language:Lang.LobbyGameBeginningText}" FontFamily="{StaticResource Volcanic Dungeon}" FontSize="20" 
                   Foreground="Black" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <UniformGrid Grid.Row="2" Columns="2" Rows="2" Margin="10">
                <Border Background="#FFD0D0D0" BorderBrush="Gray" BorderThickness="2" Margin="3" CornerRadius="8" MinHeight="120" MaxHeight="200">
                    <StackPanel VerticalAlignment="Center" Margin="3">
                        <Label Content="Player 1" FontFamily="Tw Cen MT Condensed Extra Bold" FontSize="14" 
                               HorizontalAlignment="Center" FontWeight="Bold" Margin="0,2,0,5" Padding="2"/>

                        <Border Width="60" Height="60" Background="White" BorderBrush="Gray" BorderThickness="1" 
                                CornerRadius="4" Margin="3" HorizontalAlignment="Center">
                            <Label Content="" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>

                        <Grid Margin="5,3,5,2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Button Grid.Column="0" Content="{x:Static language:Lang.LobbyAddFriendText}" Height="20" Margin="0,0,2,0" 
                                    Background="#FF6ABA2A" Foreground="White" FontWeight="Bold" 
                                    BorderBrush="Transparent" FontFamily="Tw Cen MT Condensed Extra Bold" FontSize="9">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                                CornerRadius="3" BorderThickness="0">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>

                            <Button Grid.Column="1" Content="Expulsar" Height="20" Margin="2,0,0,0" 
                                    Background="#FFD32F2F" Foreground="White" FontWeight="Bold" 
                                    BorderBrush="Transparent" FontFamily="Tw Cen MT Condensed Extra Bold" FontSize="9">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                                CornerRadius="3" BorderThickness="0">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </Grid>
                    </StackPanel>
                </Border>

                <Border Background="#FFD0D0D0" BorderBrush="Gray" BorderThickness="2" Margin="3" CornerRadius="8" MinHeight="140" MaxHeight="140">
                    <StackPanel VerticalAlignment="Center" Margin="3">
                        <Label Content="Player 2" FontFamily="Tw Cen MT Condensed Extra Bold" FontSize="14" 
                               HorizontalAlignment="Center" FontWeight="Bold" Margin="0,2,0,5" Padding="2"/>

                        <Border Width="60" Height="60" Background="White" BorderBrush="Gray" BorderThickness="1" 
                                CornerRadius="4" Margin="3" HorizontalAlignment="Center">
                            <Label Content="" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>

                        <Grid Margin="5,3,5,2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Button Grid.Column="0" Content="{x:Static language:Lang.LobbyAddFriendText}" Height="20" Margin="0,0,2,0" 
                                    Background="#FF6ABA2A" Foreground="White" FontWeight="Bold" 
                                    BorderBrush="Transparent" FontFamily="Tw Cen MT Condensed Extra Bold" FontSize="9">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                                CornerRadius="3" BorderThickness="0">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>

                            <Button Grid.Column="1" Content="Expulsar" Height="20" Margin="2,0,0,0" 
                                    Background="#FFD32F2F" Foreground="White" FontWeight="Bold" 
                                    BorderBrush="Transparent" FontFamily="Tw Cen MT Condensed Extra Bold" FontSize="9">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                                CornerRadius="3" BorderThickness="0">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </Grid>
                    </StackPanel>
                </Border>
                <Border Background="#FFE8E8E8" BorderBrush="Gray" BorderThickness="2" Margin="3" CornerRadius="8" MinHeight="140" MaxHeight="140">
                    <StackPanel VerticalAlignment="Center" Margin="3">
                        <Border Width="70" Height="70" Background="White" BorderBrush="Gray" BorderThickness="1" 
                                CornerRadius="4" Margin="3" HorizontalAlignment="Center">
                            <Label Content="?" FontSize="35" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Gray"/>
                        </Border>

                        <Grid Margin="5,3,5,2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Button Grid.Column="0" Content="{x:Static language:Lang.Lobby_AddPlayer}" Height="20" Margin="0,0,2,0" 
                                    Background="#FF4877C2" Foreground="White" FontWeight="Bold" 
                                    BorderBrush="Transparent" FontFamily="Tw Cen MT Condensed Extra Bold" FontSize="9">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                                CornerRadius="3" BorderThickness="0">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </Grid>
                    </StackPanel>
                </Border>
                <Border Background="#FFE8E8E8" BorderBrush="Gray" BorderThickness="2" Margin="3" CornerRadius="8" MinHeight="140" MaxHeight="140">
                    <StackPanel VerticalAlignment="Center" Margin="3">
                        <Border Width="70" Height="70" Background="White" BorderBrush="Gray" BorderThickness="1" 
                                CornerRadius="4" Margin="3" HorizontalAlignment="Center">
                            <Label Content="?" FontSize="35" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Gray"/>
                        </Border>

                        <Grid Margin="5,3,5,2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Button Grid.Column="0" Content="{x:Static language:Lang.Lobby_AddPlayer}" Height="20" Margin="0,0,2,0" 
            Background="#FF4877C2" Foreground="White" FontWeight="Bold" 
            BorderBrush="Transparent" FontFamily="Tw Cen MT Condensed Extra Bold" FontSize="9">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                        CornerRadius="3" BorderThickness="0">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </Grid>
                    </StackPanel>
                </Border>
            </UniformGrid>
        </Grid>

        <Grid Grid.Column="2" Grid.ColumnSpan="2" Margin="476,0,0,0">

            <StackPanel VerticalAlignment="Top">
                <Label Content="{x:Static language:Lang.GlobalGameId}" FontFamily="Tw Cen MT Condensed Extra Bold" FontSize="25" FontWeight="Bold" 
                       Foreground="Black" HorizontalAlignment="Right" Margin="0,10,0,20"/>

                <StackPanel Margin="20,0,0,20" VerticalAlignment="Bottom">
                    <Button Content="{x:Static language:Lang.Friends_MyFriends}" Height="65" Margin="0,30,0,20" Background="#FF4877C2" Foreground="White" FontWeight="Bold" 
                    BorderBrush="Transparent" FontFamily="Tw Cen MT Condensed Extra Bold" FontSize="16">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="5" BorderThickness="0">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>

            </StackPanel>

            <StackPanel VerticalAlignment="Bottom" Margin="5,5,5,5">

                <Button Content="¡INICIAR!" Height="200" Foreground="White" FontWeight="Bold" 
                        BorderBrush="Transparent" FontFamily="Tw Cen MT Condensed Extra Bold" FontSize="30">
                    <Button.Background>
                        <ImageBrush ImageSource="/Resources/Images/Begin.png"/>
                    </Button.Background>
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" Background="{TemplateBinding Background}" 
                                    CornerRadius="5" BorderThickness="0">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </Grid>

    </Grid>
</Window>
