<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.7.2" />
    </startup>

	<system.serviceModel>
		<behaviors>
			<serviceBehaviors>
				<behavior name="mexBehavior">
					<serviceMetadata httpGetEnabled="true"/>
					<serviceDebug includeExceptionDetailInFaults="true"/>
				</behavior>
			</serviceBehaviors>
		</behaviors>
		<services>
			<service behaviorConfiguration="mexBehavior" name="ArchsVsDinosServer.Services.AuthenticationManager">
				<endpoint address="AuthenticationManager" binding="netTcpBinding" contract="Contracts.IAuthenticationManager"/>
				<host>
					<baseAddresses>
						<add baseAddress="http://localhost:8080"/>
						<add baseAddress="net.tcp://localhost:8091"/>
					</baseAddresses>
				</host>
			</service>

			<service behaviorConfiguration="mexBehavior" name="ArchsVsDinosServer.Services.ProfileManager">
				<endpoint address="ProfileManager" binding="netTcpBinding" contract="Contracts.IProfileManager"/>
				<host>
					<baseAddresses>
						<add baseAddress="http://localhost:8080"/>
						<add baseAddress="net.tcp://localhost:8092"/>
					</baseAddresses>
				</host>
			</service>

			<service behaviorConfiguration="mexBehavior" name="ArchsVsDinosServer.Services.RegisterManager">
				<endpoint address="RegisterManager" binding="netTcpBinding" contract="Contracts.IRegisterManager"/>
				<host>
					<baseAddresses>
						<add baseAddress="http://localhost:8080"/>
						<add baseAddress="net.tcp://localhost:8093"/>
					</baseAddresses>
				</host>
			</service>
		</services>
	</system.serviceModel>
	
</configuration>
